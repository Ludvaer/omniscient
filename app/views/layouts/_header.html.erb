<header class="hat" id="header">
	<h1><%= link_to (t('app_name_left')+'<small style="font-size:0;"> </small>'+t('app_name_right')).html_safe, root_path, id: 'alogo'  %></h1>
	<nav class="top_nav">
	    <% if logged_in? %>
	       <%= link_to 'Profile', current_user, class: 'sign' %> | <%= link_to 'Log out', logout_path, class: 'sign' %>
	    <% else %>
		   <%=  link_to 'Sign up', signup_path, class: 'sign' %> | <%=  link_to 'Log in', login_path(redirect_url: request.original_url), class: 'sign' %> 
		<% end %>
	</nav>
</header>