<% provide(:title, t('Users')) %>
<table>
  <thead>
    <tr>
      <th><%= t('Name') %></th>
      <th><%= t('Email') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to t('Profile'), user %></td>
        <% if access?(user) %>
          <td><%= link_to t('Edit'), edit_user_path(user) %></td>
          <td><%= link_to t('Destroy'), user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


