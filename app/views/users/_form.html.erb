	<% if @username_exists then %> <label class="err">The username is taken.</label> <%end%>
	<label class="err" hidden="hidden" name="username_empty">You must have a name.</label>
	<label class="err" hidden="hidden" name="username_incorrect">The username better be of some letters and numbers.</label>
	<% if @username_exists then %> <label class="err">The username is taken.</label> <%end%>
</div>
<div class="field">
	<label>Password</label>
	<input type="password" id="password" value=""/>
